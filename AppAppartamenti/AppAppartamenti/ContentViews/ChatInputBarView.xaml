<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:appappartamenti="clr-namespace:AppAppartamenti"
             x:Class="AppAppartamenti.ContentViews.ChatInputBarView">
    <ContentView.Content>
         <Grid RowSpacing="0" 
               ColumnSpacing="0">
                   <Grid.RowDefinitions>
                         <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                   <Editor x:Name="chatTextInput"
                     TextColor="Black" Keyboard="Chat"  IsTextPredictionEnabled="False"
                     HorizontalOptions="FillAndExpand" 
                     PlaceholderColor="LightGray"
                     Placeholder="Type your message here"
                     Grid.Row="0" VerticalOptions="Center"
                     Grid.Column="0" AutoSize="TextChanges"/>

             <Button Style="{x:StaticResource MessageSendButton}" Grid.Row="0" Grid.Column="1" Margin="5" VerticalOptions="Center" HorizontalOptions="End"></Button>
        </Grid>
    </ContentView.Content>
</ContentView>
