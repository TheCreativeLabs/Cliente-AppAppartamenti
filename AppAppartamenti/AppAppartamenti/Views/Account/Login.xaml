<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:translator="clr-namespace:AppAppartamenti.Helpers"
             mc:Ignorable="d"
             x:Class="AppAppartamenti.Views.Login.Login"
             NavigationPage.HasNavigationBar="False"
             >
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Margin="20">
            <Label FontSize="90" HorizontalTextAlignment="Center" FontFamily="{x:StaticResource FA-Solid}" TextColor="#ff6b6b" FontAttributes="Bold" Margin="0,0,0,10" Text="&#xf7ae;"></Label>

            <Label Text="{translator:Translate Login.ErroreLogin}" FontSize="Medium"  FontAttributes="Bold" TextColor="Red" IsVisible="False" x:Name="lblValidazioneLogin"></Label>
            
            <Entry x:Name="entUsername" Visual="Material" Placeholder="{translator:Translate Login.Username}" TextChanged="ent_TextChanged"></Entry>

            <Entry Visual="Material" x:Name="entPassword" Placeholder="{translator:Translate Login.Password}" IsPassword="True" TextChanged="ent_TextChanged"></Entry>

            <Button Style="{x:StaticResource primaryButton}"  Visual="Material" Text="{translator:Translate Login.SignIn}" x:Name="btnAccedi" IsEnabled="False" Clicked="btnAccedi_ClickedAsync"></Button>

            <Label Text="{translator:Translate Login.ForgotPassword}" HorizontalTextAlignment="Center" TextColor="black" FontAttributes="Bold">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                </Label.GestureRecognizers>
            </Label>

            <Label Text="{translator:Translate Login.Or}" HorizontalTextAlignment="Center" Margin="0,15,0,10"></Label>

            <!--<StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Label FontFamily="{x:StaticResource FA-Brands}" Text="&#xf09a;  t" TextColor="#1e73be" FontAttributes="Bold"></Label>
                <Label Text="{translator:Translate Login.FacebookSignIn}" TextColor="#1e73be" FontAttributes="Bold">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="btnAccediFacebook_Clicked"/>
                    </Label.GestureRecognizers>
                </Label>
            </StackLayout>-->


            <Button BorderColor="#1e73be"  Visual="Material" FontFamily="{x:StaticResource FA-Brands}" HorizontalOptions="CenterAndExpand" TextColor="#1e73be"
                    Text="&#xf09a; Accedi con Facebook" Clicked="btnAccediFacebook_Clicked" BackgroundColor="White">
                <Button.Style>
                                       <OnPlatform x:TypeArguments="Style">
                                            <On Platform="iOS" Value="{x:StaticResource IosButtonRadius}"/>
                                            <On Platform="Android" Value="{x:StaticResource AndroidButtonRadius}"/>
                                        </OnPlatform>
                                    </Button.Style>
            </Button>
 
            <Button BorderColor="Red" Visual="Material" FontFamily="{x:StaticResource FA-Brands}"  HorizontalOptions="CenterAndExpand"  TextColor="Red" BackgroundColor="White" Text="&#xf1a0; Accedi con Google">
                <Button.Style>
                               <OnPlatform x:TypeArguments="Style">
                                    <On Platform="iOS" Value="{x:StaticResource IosButtonRadius}"/>
                                    <On Platform="Android" Value="{x:StaticResource AndroidButtonRadius}"/>
                                </OnPlatform>
                            </Button.Style>
            </Button>

            <Label x:Name="lblRegistrati" FontAttributes="Bold" Text="{translator:Translate Login.RegisterIfNoAccount}" HorizontalTextAlignment="Center" Margin="0,10,0,0" TextColor="black">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_lblRegistrati"/>
                </Label.GestureRecognizers>
            </Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>