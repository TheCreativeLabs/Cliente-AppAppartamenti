<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:syncTheme="clr-namespace:Syncfusion.XForms.Themes;assembly=Syncfusion.Core.XForms"
             xmlns:syncfusion="clr-namespace:Syncfusion.SfCalendar.XForms;assembly=Syncfusion.SfCalendar.XForms"
             mc:Ignorable="d"
             x:Class="AppAppartamenti.Views.Agenda"
             Title="Messaggi"
             x:Name="BrowseItemsPage"
             NavigationPage.HasNavigationBar="False"
             xmlns:translator="clr-namespace:AppAppartamenti.Helpers"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core" xmlns:syncfusion1="clr-namespace:Syncfusion.SfPicker.XForms;assembly=Syncfusion.SfPicker.XForms" 
             ios:Page.UseSafeArea="true"
             BackgroundColor="{x:StaticResource SfondoColor}">

    <ContentPage.Resources>
                    <syncTheme:SyncfusionThemeDictionary x:Key="Theme">
                        <syncTheme:SyncfusionThemeDictionary.MergedDictionaries>
                            <syncTheme:LightTheme x:Name="LightTheme" />
                        </syncTheme:SyncfusionThemeDictionary.MergedDictionaries>
                    </syncTheme:SyncfusionThemeDictionary>
                </ContentPage.Resources>

            <ContentPage.Content>
                <StackLayout Style="{x:StaticResource StackContainer}">
                    <Label Style="{x:StaticResource Title}"
                           Text="{translator:Translate Agenda.Title}"></Label>

                    <syncfusion:SfCalendar x:Name="calendar"
                                           EnableDatesInPast="False" 
                                       ShowLeadingAndTrailingDays="False"
                                       ShowNavigationButtons="True">
                        <syncfusion:SfCalendar.MonthViewSettings>
                            <syncfusion:MonthViewSettings TodaySelectionBackgroundColor="{x:StaticResource PrimaryColor}" DateSelectionColor="{x:StaticResource PrimaryColor}">
                            </syncfusion:MonthViewSettings>
                        </syncfusion:SfCalendar.MonthViewSettings>
                    </syncfusion:SfCalendar>

                    <Label Text="Appuntamenti" Style="{x:StaticResource AdTitle}" Margin="0,-40,0,0"></Label>

                    <ListView x:Name="lwAppuntamenti" SeparatorVisibility="None" ItemsSource="{Binding Items}">
                        <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <Frame>
                                            <Label Text="PorcoDio"></Label>
                                        </Frame>
                                    </ViewCell>
                                </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>
            </ContentPage.Content>
</ContentPage>