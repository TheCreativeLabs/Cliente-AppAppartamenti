<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:appappartamenti="clr-namespace:AppAppartamenti"
             xmlns:translator="clr-namespace:AppAppartamenti.Helpers"
             xmlns:conv="clr-namespace:AppAppartamenti.Converter" mc:Ignorable="d"
             x:Class="AppAppartamenti.Views.MieiAnnunci"
             NavigationPage.HasNavigationBar="False">


     <ContentPage.Resources>
        <ResourceDictionary>
            <conv:ByteArrayToImageSourceConverter x:Key="ByteArrayToImage" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <!--<NavigationPage.TitleView>
        <StackLayout Orientation="Horizontal">
            <Label FontSize="Title" FontAttributes="Bold" VerticalTextAlignment="Center"
                   Text="{translator:Translate MieiAnnunci.Title}" TextColor="White"></Label>

            <Button HorizontalOptions="EndAndExpand" TextColor="White" WidthRequest="45"
                    BackgroundColor="Transparent" Text="&#xf067;" FontSize="Medium" Visual="Default"
                    FontFamily="{x:StaticResource FA-Solid}" Clicked="BtnAdd_Clicked"></Button>
        </StackLayout>
    </NavigationPage.TitleView>-->

    <ContentPage.Content>
            <StackLayout Orientation="Vertical">
                <StackLayout Orientation="Horizontal" Padding="20,10,20,10">
                    <Label FontSize="Title" FontAttributes="Bold" VerticalTextAlignment="Center"
                           Text="{translator:Translate MieiAnnunci.Title}" TextColor="Black"></Label>

                    <Button HorizontalOptions="EndAndExpand" TextColor="White" WidthRequest="45"
                            HeightRequest="45"
                             Text="&#xf067;" FontSize="Medium" Visual="Default" BackgroundColor="#ff6b6b"
                            FontFamily="{x:StaticResource FA-Solid}" Clicked="BtnAdd_Clicked">
                        <Button.Style>
                               <OnPlatform x:TypeArguments="Style">
                                    <On Platform="iOS" Value="{x:StaticResource IosButtonRadius}"/>
                                    <On Platform="Android" Value="{x:StaticResource AndroidButtonRadius}"/>
                                </OnPlatform>
                            </Button.Style>
                    </Button>
                </StackLayout>

                <BoxView VerticalOptions="Center"
           HorizontalOptions="FillAndExpand"
           HeightRequest="1"
           Color="LightGray"></BoxView>

            <ListView x:Name="AnnunciiListView"
                ItemsSource="{Binding Items}"
                VerticalOptions="FillAndExpand"
                HasUnevenRows="true"
                RefreshCommand="{Binding LoadItemsCommand}"
                IsPullToRefreshEnabled="true"
                IsRefreshing="{Binding IsBusy, Mode=OneWay}"
                CachingStrategy="RecycleElement"
                ItemSelected="OnItemSelected"
                SeparatorVisibility="None">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Frame HasShadow="True" Padding="0" HeightRequest="260" Margin="20,10,20,10"  CornerRadius="5" IsClippedToBounds="True">
                            <StackLayout>
                                <Image Aspect="AspectFill" HeightRequest="190" Source="{Binding ImmaginePrincipale, Converter={StaticResource ByteArrayToImage}}" Margin="0,0,0,150"></Image>

                                <Label Text="{Binding Titolo}" 
                                d:Text="{Binding .}"
                                LineBreakMode="NoWrap" 
                                FontSize="Large" TextColor="Black" VerticalTextAlignment="End" Margin="15,-150,0,0" FontAttributes="Bold"/>
                                <Label Text="{Binding Descrizione}" 
                                d:Text="Item descripton" VerticalTextAlignment="End"
                                LineBreakMode="NoWrap" Margin="15,0,0,0" />

                                <Button x:Name="lblComandiRapidi"   Text="&#xf142;"  Margin="0,-50,15,15" BackgroundColor="Transparent" FontSize="Large" HorizontalOptions="End" TextColor="Black" FontFamily="{StaticResource FA-Solid}">
                                </Button>
                            </StackLayout>
                        </Frame>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

            </StackLayout>
    </ContentPage.Content>
</ContentPage>