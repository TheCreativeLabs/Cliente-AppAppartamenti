<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppAppartamenti.Views.EnableNotification"
              xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core" 
             ios:Page.UseSafeArea="true">

    <ContentPage.Content>
        <StackLayout Style="{x:StaticResource StackContainer}" VerticalOptions="Center">
            <Label FontSize="60"  FontFamily="{x:StaticResource FA-Solid}" TextColor="{x:StaticResource DarkColor}" Text="&#xf0f3;"></Label>

            <Label Text="Promuovocasa.it vorrebbe inviarti notifiche" Style="{x:StaticResource Title}"></Label>

            <Button Clicked="btnEnable_ClickedAsync" HorizontalOptions="Start" Padding="15" Text="Abilita le notifiche" Style="{x:StaticResource primaryButton}"></Button>
            <Button Clicked="btnDisabled_ClickedAsync" HorizontalOptions="Start" Padding="15" Text="Continua senza" Style="{x:StaticResource SecondaryButton}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
