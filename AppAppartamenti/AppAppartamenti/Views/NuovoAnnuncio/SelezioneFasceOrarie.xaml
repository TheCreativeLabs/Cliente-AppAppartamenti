                                            </StackLayout>
                                        </ViewCell>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                                <ListView.Footer>
                                    <Label/>
                                </ListView.Footer>
                          </ListView>
                    </StackLayout>

                <Button Text="{translator:Translate SelezioneDescrizione.CreaAnnuncio}" Clicked="BtnProcedi_Clicked"  Style="{x:StaticResource primaryButton}" ></Button>
                </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>