<ContentPage.Content>
        <StackLayout Style="{x:StaticResource StackContainer}">

            <StackLayout Orientation="Horizontal">
                  <Button BackgroundColor="Transparent"
                        Text="&#xf053;" HorizontalOptions="StartAndExpand" FontSize="Subtitle" Style="{x:StaticResource NavBackButton}" 
                        Clicked="BtnBack_Clicked">
                  </Button>

                  <Button BackgroundColor="Transparent"
                            Text="&#xf00d;" HorizontalOptions="End" FontSize="Subtitle" Style="{x:StaticResource NavBackButton}" 
                            Clicked="BtnCancel_Clicked">
                  </Button>
            </StackLayout>

            <Label Style="{x:StaticResource Title}" Text="{translator:Translate SelezioneProprieta.NuovoAnnuncio}"></Label>
            <Label Style="{x:StaticResource Subtitle}" Text="{translator:Translate SelezioneLuogo.WhereQuestion}"></Label>
            <ProgressBar Progress="0.3" Margin="0,0,0,20"/>

            <Label Text="{translator:Translate SelezioneLuogo.Locality}"></Label>
            <Entry  x:Name="entCercaComune" Placeholder="{translator:Translate SelezioneLuogo.LocalityPlaceholder}" TextChanged="EntCercaComune_TextChanged"></Entry>

            <ListView x:Name="lvComuni" IsVisible="False" ItemSelected="LvComuni_Selected" ios:ListView.SeparatorStyle="FullWidth" SeparatorColor="LightGray">
                <ListView.Footer>
                    <DataTemplate>
                        <ContentView />
                    </DataTemplate>
                </ListView.Footer>

                <ListView.FooterTemplate>
                    <DataTemplate>
                        <Label/>
                    </DataTemplate>
                </ListView.FooterTemplate>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Label Text="{Binding NomeComune}" VerticalTextAlignment="Center" />
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <BoxView HeightRequest="1" Color="LightGray" Margin="0,15,0,15"></BoxView>

            <Label x:Name="lblIndirizzo" Text="{translator:Translate SelezioneLuogo.Address}" Margin="0,0,20,0"></Label>
            <Entry x:Name="entIndirizzo"
                                        Unfocused="EntIndirizzo_Unfocused"
                                        Placeholder="{translator:Translate SelezioneLuogo.AddressPlaceholder}"></Entry>

            <maps:Map x:Name="map" IsVisible="False" HeightRequest="200" Margin="0"/>

            <Button x:Name="btnIndirizzoProcedi" IsEnabled="False" Text="{translator:Translate SelezioneLuogo.Continue}" 
                    Clicked="BtnIndirizzoProcedi_Clicked" Style="{x:StaticResource primaryButton}" ></Button>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>