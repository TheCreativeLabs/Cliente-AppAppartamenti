   <ContentPage.Content>
        <StackLayout Style="{x:StaticResource StackContainer}">

         <StackLayout Orientation="Horizontal">
                  <Button BackgroundColor="Transparent"
                        Text="&#xf053;" HorizontalOptions="StartAndExpand" FontSize="Subtitle" Style="{x:StaticResource NavBackButton}" 
                        Clicked="BtnBack_Clicked">
                  </Button>

                  <Button BackgroundColor="Transparent"
                            Text="&#xf00d;" HorizontalOptions="End" FontSize="Subtitle" Style="{x:StaticResource NavBackButton}" 
                            Clicked="BtnCancel_Clicked">
                  </Button>
            </StackLayout>

            <Label Style="{x:StaticResource Title}" Text="{translator:Translate SelezioneProprieta.NuovoAnnuncio}"></Label>
            <Label Style="{x:StaticResource Subtitle}" Text="{translator:Translate SelezioneTipologiaAnnuncio.SaleRent}"></Label>
            <controls:StepMenu CurrentId="2"/>

            <input:SelectionView ItemsSource="{Binding Items}"
                 RowSpacing="20" Margin="20" x:Name="rbList" SelectionType="RadioButton" ColumnNumber="1" Color="#ff6b6b">
            </input:SelectionView>

            <Button Text="{translator:Translate SelezioneTipologiaAnnuncio.Continue}" Clicked="BtnAvanti_Clicked"  Style="{x:StaticResource primaryButton}" ></Button>
        </StackLayout>
