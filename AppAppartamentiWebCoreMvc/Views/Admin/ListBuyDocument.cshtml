@model ListaDocumentiDto

@{
    ViewData["Title"] = "View";
}
<div class="container container-custom">
    <div class="row">
        <div class="col-sm-8 offset-sm-2">
            <div class="row">
                <div class="col-6">
                    <label class="title">
                        Documenti per l'acquisto
                    </label>
                </div>
                <div class="col-6 text-right">
                    @Html.ActionLink("Aggiungi documento", "BuyDocumentInsert")
                </div>
            </div>

            @{
                if (Model == null)
                {
                    <div class="col-12 alert bg-light">
                        <label class="subtitle">Non sono presenti documenti.</label>
                    </div>
                }
            }

            @foreach (var item in Model.DocumentiByTipologia)
            {
                <div class="row">
                    <div class="col-12 p-2">
                        <label class="adTitle">@item.Key</label>
                    </div>

                    @foreach (var doc in item.Value)
                    {
                        <div class="col-12 p-2">
                            <label>@doc.Titolo</label>
                            @Html.ActionLink("Delete", "DeleteBuyDocument", new { Id = doc.Id.Value })
                            <hr />
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>