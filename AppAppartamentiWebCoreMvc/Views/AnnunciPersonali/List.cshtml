@model IEnumerable<AnnunciDtoOutput>

@{
    ViewData["Title"] = "View";
}
<div class="container container-custom">
    <div class="col-sm-8 offset-sm-2">
        <h2>
            I miei annunci
        </h2>

        <hr />

        @{
            if(Model == null || !(Model.Any()))
            {
                <div class="col-12 alert bg-light">
                    <label class="h6">Non sono presenti annunci.</label>
                </div>
            }
        }

        @foreach (var item in Model)
        {
            string detailUrl = @Url.Action("Edit", "AnnunciPersonali", new { Id = item.Id });

            <div class="card card-annuncio mb-3 shadow-sm" onclick="NavigateToDetail('@detailUrl')">
                <div class="row no-gutters">
                  <div class="col-md-6">
                        @{
                            if (item.ImmaginePrincipale != null)
                            {
                                var base64 = Convert.ToBase64String(item.ImmaginePrincipale);
                                var imgSrc = String.Format("data:image/gif;base64,{0}", base64);

                                <img src="@imgSrc" class="card-img card-img-annuncio" alt="image" />
                            }
                        }
                    </div>
                    <div class="col-md-6">
                        <div class="card-body p-0">
                            <div class="card-header p-1 bg-light border-0" style="text-align: end;">
                                <button type="button" title="Delete" data-id="@item.Id" onclick="AddPreferred(this,'@Url.Action("Edit", "AnnunciPersonali")','@item.Id')" class="btn text-danger mr-1">
                                   <i class="fas fa-trash"></i>
                                </button>

                                <button type="button" title="Modifica" data-id="@item.Id" onclick="AddPreferred(this,'@Url.Action("Edit", "AnnunciPersonali")','@item.Id')" class="btn mr-1">
                                   <i class="fas fa-edit"></i>
                                </button>
                            </div>

                            <div class="p-3 mt-2">
                                <h6>
                                    @item.TipologiaProprieta in  @item.TipologiaAnnuncio
                                    <br />
                                    <small class="text-muted">@item.Indirizzo, @item.NomeComune</small>
                                    <br />
                                    <strong>@item.Prezzo €</strong>
                                </h6>

                                    <hr />

                                @{
                                    if (!String.IsNullOrEmpty(item.Descrizione) && item.Descrizione.Length > 200) {
                                        <small class="font-weight-ligh">@item.Descrizione.Substring(0, 200)...</small>

                                    } else
                                    {
                                        <small class="font-weight-ligh">@item.Descrizione...</small>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>