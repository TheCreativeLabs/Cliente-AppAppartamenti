@model IEnumerable<AppAppartamentiApiClient.AnnunciDtoOutput>

@{
    ViewData["Title"] = "View";
}
<div class="container container-custom">
    <div class="col-8 offset-2">
        <h1>I mei preferiti</h1>

        <hr  class="bg-primary"/>
        @foreach (var item in Model) {
            <div class="card card-preferiti mb-3 shadow">
              <div class="row no-gutters">
                <div class="col-md-6">
                    @{
                        var base64 = Convert.ToBase64String(item.ImmaginePrincipale);
                        var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                    }

                    <img src="@imgSrc" class="card-img card-img-preferiti" alt="image"/>
                </div>
                <div class="col-md-6">
                  <div class="card-body">
                    <h5 class="card-title text-center"><strong>@item.TipologiaProprieta</strong> in <strong>@item.TipologiaAnnuncio</strong></h5>
                    <h4 class="card-title text-center"><strong>@item.Prezzo €</strong></h4>

                    <hr />
                    <p class="card-text">@item.Superficie</p>
                    <p class="card-text">@item.NomeComune - @item.Indirizzo</p>
                    <p class="card-text"><small class="text-muted">@item.DataCreazione</small></p>
                  </div>
                </div>
              </div>
            </div>

            //@Html.DisplayFor(modelItem => item.Id)
            //@Html.DisplayFor(modelItem => item.IdUtente)
            //@Html.DisplayFor(modelItem => item.IdUtente)
            //@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
            //@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
            //@Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
        }
    </div>
</div>