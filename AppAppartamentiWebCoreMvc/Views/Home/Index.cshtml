@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer _localizer
@{
    ViewData["Title"] = _localizer["Title"];
}

<div class="bgimg">
    <div class="container-fluid">
        <div class="row mt-5">
            <div class="col-sm-8 offset-sm-2 col-xs-12 p-1" style="margin-top:300px;">

                <h1 class="home-title text-white">Promuovocasa.it</h1>
                <h4 class="home-subtitle text-white">Inizia a cercare la tua casa ideale tra milioni di annunci</h4>

                <div class="shadow-lg p-1 mb-5 bg-white rounded">
                    <div class="input-group input-group-lg" style="border: none;">
                        <div class="input-group-prepend d-none d-sm-block" style="background-color: white;">
                            <span class="input-group-text mt-1" id="basic-addon1" style="background-color: white;border: none;">
                                <i class="fas fa-search col-1"></i>
                            </span>
                        </div>
                        <input id="txtSearchHome" type="text" class="form-control search-textbox" placeholder="@_localizer["SearchPlaceholder"]" aria-label="Username" aria-describedby="basic-addon1" style="border: none;">
                        <div class="search-spinner spinner-border spinner-border-sm text-secondary mt-3" role="status">
                            <span class="sr-only">Loading...</span>
                        </div>
                        <div class="input-group-append">
                            <a id="btnFiltri2" data-toggle="modal" data-target="#filterModal" class="btn btn-link text-dark" href="#"><small>+ @_localizer["OtherFilterLabel"]</small></a>
                        </div>
                        <div class="input-group-append">
                            <a id="btnSearchHome" class="btn btn-primary disabled search-button"
                               style="border-radius:0.3rem !important;"
                               asp-controller="Annunci" asp-action="List">@_localizer["Search"]</a>
                        </div>

                    </div>
                </div>
            </div>
            <!--<div id="recent-ad"></div>-->
        </div>
    </div>
</div>

<div class="container-fluid mb-5 mt-5">
    <div class="row p-4">
        <div class="col p-2 m-3">
            <p class="title">Cerca</p>
            <span class="subtitle">Inizia a cerca la casa dei tuoi sogni tra milioni di annunci.</span>
        </div>
        <div class="col m-3 p-2">
            <p class="title">Vendi</p>
            <span class="subtitle">Pubblica un nuovo annuncio e vendi la tua casa in un attimo.</span>
        </div>
        <div class="col m-3 p-2">
            <p class="title">Contatta</p>
            <span class="subtitle">Manda un messaggio al annunciatario, prendi un appartamento e inizia a cercare la tua prossima casa.</span>
        </div>
    </div>

    <div class="row  border-top m-4 border-gray p-5 ">
        <div class="col text-right">
            <img src="/images/app.png" style="height:50rem;"/>
        </div>
        <div class="col text-left" style="padding-top: 20rem;">
            <h3>@_localizer["DownloadAppTitle"]</h3>
            <label>@_localizer["DownloadAppDescription"]</label>
            <br />
            <a class="btn btn-swh bg-white mt-3" href="#">
                <i class="fab fa-apple"></i>&nbsp;App Store
            </a>
            <a class="btn btn-swh bg-white mt-3" href="#">
                <i class="fab fa-android"></i>&nbsp;Play Store
            </a>
        </div>
    </div>
</div>

<partial name="_RegistrationPartial" />
<partial name="_LoginPartial" />
<partial name="_RestorePasswordPartial" />

@section Scripts {
    <script src="~/js/home.js" asp-append-version="true"></script>
}