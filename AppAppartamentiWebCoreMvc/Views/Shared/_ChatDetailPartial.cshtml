@model ChatDtoOutput


<div class="row p-3" data-idperson="@Model.IdUser">
    @{
        foreach (var msg in Model.Messaggi)
        {
            if (msg.FromMe.HasValue && msg.FromMe.Value)
            {
                <div class="offset-2 mt-2 mb-2 col-10 bg-primary rounded p-2">
                    <span style="color:white">@msg.Messaggio</span>
                </div>
            }
            else
            {
                <div class="col-10 mt-2 mb-2 bg-light rounded p-2">
                    <span>@msg.Messaggio</span>
                </div>
            }
        }
    }
</div>
