<div class="modal fade" id="modalSignIn" tabindex="-1" role="dialog" aria-labelledby="exampleModalScrollableTitle" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
    <div class="modal-content">
        <div class="modal-body">
            <div class="container-fluid">
            <div class="row">
                <div class="col-6">
                    <h4>Registrati</h4>
                </div>
                <div class="col-6">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
            </div>

            <div class="row p-3 justify-content-center">
                <div class="col-12">
                    <form asp-controller="Login" asp-action="SignUp" method="post">
                        <div class="form-group">
                            <input name="Nome" class="form-control" id="txtNome" placeholder="Nome">
                        </div>
                        <div class="form-group">
                            <input name="Cognome" class="form-control" id="txtCognome" placeholder="Cognome">
                        </div>
                        <div class="form-group">
                            <input name="DataNascita" type="date" class="form-control" id="txtDataNascita" placeholder="Data di nascita: gg/mm/aaaa">
                        </div>
                        <div class="form-group">
                            <input name="Email" type="email" class="form-control" id="txtEmail" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <input name="Password" type="password" class="form-control" id="txtPassword" placeholder="Password">
                        </div>
                        <div class="form-group">
                            <input name="ConfermaPassword" type="password" class="form-control" id="txtRipetiPassword" placeholder="Conferma password">
                        </div>
                        <div class="form-group form-check">
                            <input type="checkbox" class="form-check-input" id="exampleCheck1">
                            <label class="form-check-label" for="exampleCheck1">Accetto le condizioni d'uso</label>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Registrati</button>
                    </form>

                    <hr />

                    <button class="btn btn-link btn-block text-muted">
                        Sei già registrato? <strong class="text-primary">Accedi</strong>
                    </button>
                </div>
            </div>
            </div>
        </div>
    </div>
    </div>
</div>
